mixin img(path, image, format, width, height, altText)
  if (format === "svg")
    img(src="img/" + path + "/" + image + "." + format, width= width, height= height, alt= altText)
  else
    picture
      source(type="image/webp" media="(max-width: 767px)" srcset="img/" + path + "/" + image + "." + "webp" + " 1x, " + "img/" + path + "/" + image + "@2x." + "webp" + " 2x")
      source(media="(max-width: 767px)" srcset="img/" + path + "/" + image + "." + "jpg" + " 1x, " + "img/" + path + "/" + image + "@2x." + "jpg" + " 2x")
      source(type="image/webp" media="(max-width: 1023px)" srcset="img/" + path + "/" + image + "." + "webp" + " 1x, " + "img/" + path + "/" + image + "@2x." + "webp" + " 2x")
      source(media="(max-width: 1023px)" srcset="img/" + path + "/" + image + "." + "jpg" + " 1x, " + "img/" + path + "/" + image + "@2x." + "jpg" + " 2x")
      source(type="image/webp", srcset="img/" + path + "/" + image + "." + "webp" + " 1x, " + "img/" + path + "/" + image + "@2x." + "webp" + " 2x")
      img(src="img/" + path + "/" + image + "." + format, srcset= "img/" + path + "/" + image + "@2x." + format + " 2x", width= width, height= height, alt= altText)
